@model IEnumerable<CloudWeb.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Loo uus</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.basingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.directorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.directorSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.basingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.directorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.directorSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productType)
            </td>
            <td>
                @if (User.IsInRole("Admin")) {
                    <a asp-action="Edit" asp-route-id="@item.id">Muuda</a><span>|</span>
                    <a asp-action="Details" asp-route-id="@item.id">Üksikasjad</a><span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.id">Kustuta</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
